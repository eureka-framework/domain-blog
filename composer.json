{
  "name": "eureka/domain-blog",
  "description": "Provide common classes & services to create blog in your application.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Domain\\Blog\\": "./src",
      "Eureka\\Domain\\Blog\\Script\\": "./scripts"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Domain\\Blog\\Tests\\": "./tests"
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*",

    "eureka/component-database": "^3.1",
    "eureka/component-orm": "^5.2",
    "eureka/component-validation": "^5.1"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "eureka/kernel-console": "^5.1",
    "eureka/component-console": "^5.1",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
